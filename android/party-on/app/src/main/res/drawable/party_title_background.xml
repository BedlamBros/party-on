<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="0dp" android:color="@color/background_stylized" />
            <solid android:color="@color/accent" />

        </shape>
    </item>

    <item android:top="-3dp" android:bottom="3dp" android:left="-2dp" android:right="-1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/accent" />
            <solid android:color="@color/background_stylized" />
        </shape>
    </item>
</layer-list>